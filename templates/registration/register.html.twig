{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="{{ asset('images/ev.jpg') }}"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Register</p>
                {{ form_start(registrationForm) }}
                <div class="form-outline mb-4">
                    {{ form_row(registrationForm.matricule, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-outline mb-4">
                    {{ form_row(registrationForm.FirstName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-outline mb-4">
                    {{ form_row(registrationForm.SecondName, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-outline mb-4">
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-outline mb-3">
                    {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}, {
                        label: 'Password'
                    }) }}
                </div>
                <div class="text-center text-lg-start mt-4 pt-2">
                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                        <button type="submit" class="btn btn-primary btn-lg">Register</button>
                    </div>
                    <p class="small fw-bold mt-2 pt-1 mb-0">you do have an account? <a href="{{ path('app_login') }}" class="link-danger">Login</a></p>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</section>
{% endblock %}
